{
    "version": 3,
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "inherits": ["ci-base", "ci-ninja"],
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_C_COMPILER": "$env{HOME}/local/bin/gcc",
                "CMAKE_CXX_COMPILER": "$env{HOME}/local/bin/g++"
            }
        },
        {
            "name": "x64-debug",
            "displayName": "x64 Debug",
            "description": "x64 Debug build",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "x64-release",
            "displayName": "x64 Release",
            "description": "x64 Release build",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "BUILD_TESTING": "OFF"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "configurePreset": "x64-debug",
            "targets": ["all"]
        },
        {
            "name": "release",
            "configurePreset": "x64-release",
            "targets": ["all"]
        }
    ],
    "testPresets": [
        {
            "name": "test",
            "configurePreset": "x64-debug",
            "output": {"outputOnFailure": true},
            "execution": {"noTestsAction": "error", "stopOnFailure": true}
        }
    ]
}